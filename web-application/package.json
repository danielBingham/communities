{
  "name": "@communities/web-application",
  "version": "0.6.0-rc15",
  "description": "The web application for Communities.  Non-profit social media.",
  "author": "Daniel Bingham",
  "license": "GPL-3.0",
  "private": true,
  "repository": {},
  "publishConfig": {
    "registry": "https://communities-843012963492.d.codeartifact.us-east-1.amazonaws.com/npm/communities-shared-npm-repository/"
  },
  "main": "server/bin/www",
  "scripts": {
    "start": "node ./server/bin/www",
    "build": "(rm ./public/dist/* || true) && webpack --mode production && (cd ./public/dist && zip dist.zip *)",
    "build-dev": "(rm ./public/dist/* || true) && export NODE_ENV=development  && webpack --mode development && (cd ./public/dist && zip dist.zip *)",
    "client": "webpack serve --mode development --devtool inline-source-map --no-open",
    "server": "nodemon ./server/bin/www",
    "dev": "export NODE_ENV=development && concurrently \"npm run server\" \"npm run client\"",
    "jest": "jest",
    "test": "jest test"
  },
  "jest": {
    "verbose": true,
    "moduleNameMapper": {
      "^/logger": "<rootDir>/client/logger",
      "^/state/(.*)": "<rootDir>/client/state/$1",
      "^/errors/(.*)": "<rootDir>/client/errors/$1",
      "^/components/(.*)": "<rootDir>/client/components/$1",
      "^/pages/(.*)": "<rootDir>/client/pages/$1"
    }
  },
  "dependencies": {
    "@capacitor/app": "^7.1.0",
    "@capacitor/core": "^7.4.3",
    "@capacitor/device": "^7.0.2",
    "@capacitor/push-notifications": "^7.0.3",
    "@capgo/capacitor-updater": "^7.0.36",
    "@communities/backend": "^0.6.0-rc15",
    "@communities/shared": "^0.6.0-rc15",
    "@heroicons/react": "2.x",
    "@reduxjs/toolkit": "2.x",
    "@sentry/react": "9.x",
    "@sentry/webpack-plugin": "3.x",
    "connect-pg-simple": "10.x",
    "cors": "2.x",
    "express": "5.x",
    "express-session": "1.x",
    "express-ws": "^5.0.2",
    "mime": "3.x",
    "multer": "2.x",
    "qs": "6.x",
    "react": "19.x",
    "react-dom": "19.x",
    "react-image-crop": "11.x",
    "react-linkify": "1.0.0-alpha",
    "react-redux": "9.x",
    "react-router-dom": "6.x",
    "textarea-caret": "3.x",
    "uuid": "11.x"
  },
  "devDependencies": {
    "@babel/cli": "7.x",
    "@babel/core": "7.x",
    "@babel/node": "7.x",
    "@babel/plugin-transform-runtime": "7.x",
    "@babel/preset-env": "7.x",
    "@babel/preset-react": "7.x",
    "@babel/register": "7.x",
    "@babel/runtime": "7.x",
    "babel-jest": "30.x",
    "babel-loader": "8.x",
    "concurrently": "^9.2.0",
    "css-loader": "6.x",
    "dotenv": "16.x",
    "form-data": "4.x",
